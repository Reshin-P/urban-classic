

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              
              {{#if NoUser}}
        
  <div class="alert alert-danger alert-dismissible d-flex align-items-center fade show">
      <i class="bi-exclamation-octagon-fill"></i>
       {{NoUser}}
       
  
  </div>
  
              {{/if}}
             
              
     <form method="post" id="registration_form" action="/sendLogin_otp"> 
   
 <h5 class="error_form  text-danger" id="password_error_message"></h5>
              <div class="form-outline mb-4">
               
  <span class="error_form" id="mob_error_message"></span>
                <input type="tel" id="form_mob" placeholder="Enter Mobile No"  name="mobno" class="form-control form-control-lg" />
              
               
    
              </div> 
              
  
          
             
              <button class="btn btn-danger btn-lg btn-block" type="submit">Send Otp</button>
              </form>
  
              
            </div>
         
  
            
          </div>
        </div>
      </div>
    </div>
  </section>
  
  
  <script type="text/javascript">
  
  
  $("#mob_error_message").hide()
  
  
  
  
  
  
  var error_mob=false;
  

  
     
           $("#form_mob").focusout(function() {
              check_mob();
           });
           
           
  
  
       function check_mob() {
            var pattern = /([0-9]{10})|(\([0-9]{3}\)\s+[0-9]{3}\-[0-9]{4})/;
            var mob= $("#form_mob").val();
            if (pattern.test(mob) && mob !== ''&&mob.length==10) {
               $("#mob_error_message").hide();
               $("#form_mob").css("border-bottom","2px solid #34F458");
            } else {
               $("#mob_error_message").html("Enter 10 Digit Number");
               $("#mob_error_message").show();
               $("#form_mob").css("border-bottom","2px solid #F90A0A");
               error_mob = true;
            }
         }
          
  
           $("#registration_form").submit(function() {
            
              error_mob = false;
              
              check_mob();
              
  
              if (error_mob === false  ) {
                
                 return true;
              } else {
                 alert("Please Fill the form Correctly");
                 return false;
              }
  
  
           });
       
  
  
  </script>