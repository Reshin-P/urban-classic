<script>
  function cancelOrder(user,prod){



    
Swal.fire({
  title: 'Are you sure?',
  text: "Are You Want To Cancel This Product",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, cancel it!'
}).then((result) => {
  if (result.isConfirmed) {
     $.ajax({
    url:'/order/CancelOrder',
    method:'post',
    data:{
      UserId:user,
      ProdId:prod
    },
    success:(response)=>{
      if(response.status){
        location.reload()
      }
      else{
        location.reload()
      }
    }
  })
    Swal.fire(
      'Cancelled!',
      'Product Cancelled',
      'success'
    )
  }
})
 

  }
</script>