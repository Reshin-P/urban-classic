
<section class="vh-100" style="background-color: #fffafa;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-9">

   

        <div class="card" style="border-radius: 15px;">
          <div class="card-body">
              <form action="/admin/update-banner/{{banner._id}}" id="banner_form" enctype="multipart/form-data" method="post">
            <div class="row align-items-center pt-4 pb-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Heading</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input type="text" id="form_heading1" value="{{banner.heading}}" style="width: 30rem;" name="heading" class="form-control form-control-lg" >
                  <h5 class="error_form text-danger" id="heading1_error_message"></h5>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Main Heading</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input type="text" id="form_mainheading" height="20rem" name="mainheading" value="{{banner.mainheading}}" class="form-control form-control-lg"  />
                  <h5 class="error_form text-danger" id="heading1_error_message"></h5>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Description</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input type="text" id="form_description"  value="{{banner.description}}" name="description" style="height: 7rem;" class="form-control form-control-lg" />
                      <label class="form-label" for="form3Examplev4">Description</label>
                           <h5 class="error_form text-danger" id="description_error_message"></h5>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
             
              <div class="col-md-9 pe-5">

                <input class="form-control form-control-lg" name="image1" id="photo"  type="file" />

              </div>
               <div class="col-md-3 ps-5">

           <img width="100rem" src="/images/BannerImages/{{banner._id}}image1.jpg" height="70rem">

              </div>
              
            
              <div class="col-md-9 pe-5">

                <input class="form-control form-control-lg" name="image2" id="photo"   type="file" />

              </div>
                <div class="col-md-3 ps-5">

              <img width="100rem" src="/images/BannerImages/{{banner._id}}image2.jpg" height="70rem">

              </div>
            </div>

            <hr class="mx-n3">

            <div class="px-5 py-4">
              <button type="submit" class="btn btn-primary btn-lg">Update Banner</button>
            </div>

          </div>
          </form>
        </div>

      </div>
    </div>
  </div>
   <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
