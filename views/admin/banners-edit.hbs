    <script src="/js/sb-admin-2.min.js"></script>
</section>


<script type="text/javascript">
$("#heading1_error_message").hide()
$("#description_error_message").hide()
$("#mainheading_error_message").hide()




var error_heading1=false;
var error_mainheading=false;
var error_description=false;


   $("#form_heading1").focusout(function(){
            check_heading1();
         });
       
         $("#form_description").focusout(function() {
            check_description();
         });
         $("#form_mainheading").focusout(function() {
             check_mainheading();
         });
        

         function check_heading1() {
            
            var heading = $("#form_heading1").val();
            if (heading !== '') {
               $("#heading1_error_message").hide();
               $("#form_heading1").css("border-bottom","2px solid #34F458");
            } else {
               $("#heading1_error_message").html("Enter the Heading");
               $("#heading1_error_message").show();
               $("#form_heading1").css("border-bottom","2px solid #F90A0A");
               error_productname = true;
            }
         }

         function check_description() {
            
            var description = $("#form_description").val()
            if ( description !== '') {
               $("#description_error_message").hide();
               $("#form_description").css("border-bottom","2px solid #34F458");
            } else {
               $("#description_error_message").html("Enter the Description");
               $("#description_error_message").show();
               $("#form_description").css("border-bottom","2px solid #F90A0A");
               error_brand = true;
            }
         }
           function check_mainheading() {
          
            var mainheading = $("#form_mainheading").val()
            if ( mainheading !== '') {
               $("#mainheading_error_message").hide();
               $("#form_mainheading").css("border-bottom","2px solid #34F458");
            } else {
               $("#mainheading_error_message").html("Enter the Main Heading");
               $("#mainheading_error_message").show();
               $("#form_mainheading").css("border-bottom","2px solid #F90A0A");
               error_description = true;
            }
         }
     
       
         $("#photo").rules("add", {
        accept: "jpg|jpeg|png|ico|bmp"
    });
         $("#banner_form").submit(function() {
    
             error_heading1=false;
            error_mainheading=false;
             error_description=false;
             check_heading1();
                 check_description();
                   check_mainheading();

           
            if (error_heading1=== false && error_mainheading === false && error_description === false ) {
               
               return true;
            } else {
               alert("Please Fill the form Correctly");
               return false;
            }


         });
    


</script>