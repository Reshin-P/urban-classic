 
<section class="vh-100" style="background-color: #ffffff;">
  <div class="container one py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

           {{#if succes}}
           <div class="alert alert-success" role="alert">
  {{succes}}
</div>
{{/if}}



            <div style="color: red; margin-bottom: 2rem;"><h3 class="text-danger">Update Category</h3></div>
            <form method="post" id="category_form" action="/admin/update-category/{{category._id}}"> 

            <div class="form-outline mb-4">
               <h5 class="error_form text-danger" id="category_error_message"></h5>
              <input type="text" id="form_category" name="category" placeholder="{{category.category}}"  class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Category Name</label>
            </div>

         

            <button class="btn btn-primary btn-lg btn-block" type="submit">Update Category</button>
            </form>

           
          </div>
        </div>
      </div>
    </div>
  </div>
   <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
</section>


<script type="text/javascript">


$("#category_error_message").hide()


var error_category=false;



   
         $("#form_category").focusout(function() {
            check_category();
         });
         
        


         function check_category() {
            var pattern = /^[a-zA-Z" "]*$/;
            var category = $("#form_category").val();
            if (pattern.test(category) && category !== '') {
               $("#category_error_message").hide();
               $("#form_category").css("border-bottom","2px solid #34F458");
            } else {
               $("#category_error_message").html("Should contain only Characters");
               $("#category_error_message").show();
               $("#category_error_message").css("border-bottom","2px solid #F90A0A");
               error_category = true;
            }
         }

        
        

         $("#category_form").submit(function() {
          
            error_category = false;
            
           
check_category()
          
          
            

            if (error_category === false ) {
              
               return true;
            } else {
               alert("Please Fill the form Correctly");
               return false;
            }


         });
     


</script>